{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@ngeth/*": [
        "libs/*",
        "@ngeth/*"
      ],
      "@ngeth/provider": [
        "libs/provider/src/index.ts",
        "@ngeth/provider"
      ],
      "@ngeth/contract": [
        "libs/contract/src/index.ts",
        "@ngeth/contracts"
      ],
      "@ngeth/utils": [
        "libs/utils/src/index.ts",
        "@ngeth/utils"
      ],
      "@ngeth/auth": [
        "libs/auth/src/index.ts",
        "@ngeth/auth"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ],
  "angularCompilerOptions": {
    "genDir": "./dist",
    "skipMetadataEmit": false,
    "skipTemplateCodegen": true
  }
}
